<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/conversation_item_layout"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:orientation="vertical">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:layout_height="69dp">

    <RelativeLayout
        android:id="@+id/conversation_item_layout_avatar"
        android:layout_width="69dp"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/conversation_item_iv_avatar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/conversation_item_name"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:textColor="#000000"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:textSize="15sp"
                android:layout_height="0dp" />
            <TextView
                android:id="@+id/conversation_item_content"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:maxLines="1"
                android:layout_height="0dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <TextView
                android:layout_weight="1"
                android:id="@+id/conversation_item_message_time"
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content" />
            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="0dp">
                <TextView
                    android:id="@+id/conversation_item_message_count"
                    android:layout_width="25dp"
                    android:textColor="#ffffff"
                    android:gravity="center"
                    android:background="@drawable/round_mention"
                    android:visibility="gone"
                    android:layout_height="25dp" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:background="#33999999"
        android:layout_height="1dp"/>
</LinearLayout>