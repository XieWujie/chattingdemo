<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_gravity="start"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="25dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/personal_user_nic_name_view"
            android:layout_width="30dp"
            android:src="@drawable/user_nickname"
            android:layout_marginLeft="10dp"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/personal_user_nic_name_text"
         android:layout_toRightOf="@+id/personal_user_nic_name_view"
         android:text="未知"
         android:layout_marginLeft="10dp"
         android:gravity="center"
         android:layout_centerVertical="true"
         android:layout_width="wrap_content"
         android:layout_height="match_parent" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:background="#33999999"
        android:layout_height="1dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="25dp">
        <ImageView
            android:id="@+id/personal_gender_view"
            android:layout_width="30dp"
            android:src="@drawable/user_gend"
            android:layout_marginLeft="10dp"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/personal_gender_text"
            android:text="未知"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:background="#33999999"
        android:layout_height="1dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="25dp">
        <ImageView
            android:id="@+id/personal_position_view"
            android:layout_width="30dp"
            android:src="@drawable/location"
            android:layout_marginLeft="10dp"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/personal_position_text"
            android:text="中国"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:background="#33999999"
        android:layout_height="1dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_margin="5dp"
        android:layout_height="25dp">
        <ImageView
            android:id="@+id/personal_age_view"
            android:layout_width="30dp"
            android:src="@drawable/user_age"
            android:layout_marginLeft="10dp"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/personal_age_text"
            android:text="0岁"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:background="#33999999"
        android:layout_height="1dp"/>

</LinearLayout>